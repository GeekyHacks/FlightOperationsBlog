<h1>Posts#index</h1>
<div>
  <div><%= render partial: '/users/listuser', locals: {user: @user}  %> </div>
  <div class="posts">
    <% @posts.limit(3).each do |post| %>
      <%= render partial: 'listpost', locals: { post: post } %>
      <div class="comments">
        <% post.comments.limit(3).each do |comment| %>
          <p><%= comment.user.name %>: <%= comment.text %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
