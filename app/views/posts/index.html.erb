<div class="userposts">
  <div><%= render partial: '/users/listuser', locals: {user: @user}  %> </div>
  <div class="posts">
    <% @posts.each do |post| %>
      <%= render partial: 'listpost', locals: { post: post } %>
      <div class="comments">
        <% post.most_recent_comments.each do |comment| %>
          <p><%= comment.user.name %>: <%= comment.text %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<a href="<%=users_path( @users) %>" class="linkButton">
  See all Users
</a>
<a href="<%=new_user_post_path %>" class="linkButton">
  Create a post
</a>
