<div>
  <div class="postPart">
    <span>Post:<%=@post.id  %> by:<%=@post.author.name %></span>
    <div><span>Comments:<%= @post.comments_counter  %></span><span>Likes:<%= @post.likes_counter%> </span></div>
    <p><%= @post.text %></p>
    <div>    <%=
                button_to 'Like', user_post_likes_path(@user, @post),
                method: :post
                # data: {turbo_method: :create},
                # class: 'btn btn-sm btn-primary'
            %>
    </div>
  </div>
  <div><%= render partial: 'postcomments', locals: {comment: @comment}  %> </div>
</div>
